@page "/counterwithparameter"

@rendermode InteractiveAuto

<h3>Counter (with param)</h3>
<p>Current Count: @CurrentCount</p>
<BlogButton Type="BlogButton.ButtonType.Select" OnClick="@IncrementCount">Click me</BlogButton>

@code {

    [Parameter]
    public int IncrementAmmount { get; set; } = 1;

    [Parameter]
    public int CurrentCount { get; set; } = 0;

    [Parameter]
    public EventCallback<int> CurrentCountChanged { get; set; }

    private async Task IncrementCount() 
    {
        CurrentCount += IncrementAmmount;
        await CurrentCountChanged.InvokeAsync(CurrentCount);
    }
}
